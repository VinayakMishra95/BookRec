<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<display-name>BookRec - WebApp project</display-name>
	<description>BookRec website.</description>

	<servlet>
		<servlet-name>CreateUser</servlet-name>
		<servlet-class>unipd.webapp.project.servlet.CreateUserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SearchBar</servlet-name>
		<servlet-class>unipd.webapp.project.servlet.SearchBarServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>CreateUser</servlet-name>
		<url-pattern>/sign-up</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SearchBar</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
</web-app>

