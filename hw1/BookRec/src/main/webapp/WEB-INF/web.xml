<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<display-name>BookRec - WebApp project</display-name>
	<description>BookRec website.</description>

	<servlet>
		<servlet-name>CreateUser</servlet-name>
		<servlet-class>unipd.webapp.project.servlet.CreateUserServlet</servlet-class>
	</servlet>

    <!-- Servlet mapping for HomepageServlet -->
    <servlet>
        <servlet-name>homepage</servlet-name>
        <servlet-class>src.main.java.HomepageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homepage</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateUser</servlet-name>
		<url-pattern>/html/signup.html</url-pattern>
	</servlet-mapping>

    <!-- Mapping for index.jsp -->
    <welcome-file-list>
        <!-- Assuming index.jsp is in the src.main.java.jsp directory -->
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
</web-app>

